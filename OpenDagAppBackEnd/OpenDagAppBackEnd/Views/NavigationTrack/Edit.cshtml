@model OpenDagAppBackEnd.Models.NavigationTrack

@{
    ViewBag.Title = "Edit";
}

<div class="bodyForms">
    <h2>Edit</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset class="form-horizontal">
            <legend>NavigationTrack</legend>

            @Html.HiddenFor(model => model.Id)

            <div class="control-group">
                @Html.LabelFor(model => model.RouteId, "Route", new { @class = "control-label" })
                <div class="controls">
                    @Html.DropDownList("RouteId", String.Empty)
                    @Html.ValidationMessageFor(model => model.RouteId, null, new { @class = "help-inline" })
                </div>
            </div>

            <div class="control-group">
                @Html.LabelFor(model => model.FileName, new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(model => model.FileName)
                    @Html.ValidationMessageFor(model => model.FileName, null, new { @class = "help-inline" })
                </div>
            </div>

            <div class="control-group">
                @Html.LabelFor(model => model.Image, new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(model => model.Image)
                    @Html.ValidationMessageFor(model => model.Image, null, new { @class = "help-inline" })
                </div>
            </div>

            <img src="data:image/gif;base64,@ViewBag.Image" width="200px" height="200px" alt="" />

            <div class="form-actions no-color">
                <input type="submit" value="Save" class="btn" />
            </div>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Terug naar de lijst", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</div>