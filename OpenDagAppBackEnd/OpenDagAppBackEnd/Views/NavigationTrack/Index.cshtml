@model IEnumerable<OpenDagAppBackEnd.Models.NavigationTrack>

@{
    ViewBag.Title = "Index";
}

<div class="bodyForms">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Creeër Nieuw", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Route.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            @*<th>
                    @html.displaynamefor(model => model.image)
                </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Route.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FileName)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Image)
                    </td>*@
                <td>
                    @Html.ActionLink("Aanpassen", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Verwijderen", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>