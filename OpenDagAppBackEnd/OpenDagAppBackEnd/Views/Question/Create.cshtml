@model OpenDagAppBackEnd.Models.Question

@{
    ViewBag.Title = "Create";
}

<div class="bodyForms">
    <h2>Create</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset class="form-horizontal">
            <legend><b>Question</b></legend>

            <div class="control-group">
                <b>Vraag</b>
                <div class="controls">
                    @Html.EditorFor(model => model.Text)
                    @Html.ValidationMessageFor(model => model.Text, null, new { @class = "help-inline" })
                </div>
            </div>

            <div class="control-group">
                <b>@Html.LabelFor(model => model.SurveyId, "Survey", new { @class = "control-label" })</b>
                <div class="controls">
                    @Html.DropDownList("SurveyId", String.Empty)
                    @Html.ValidationMessageFor(model => model.SurveyId, null, new { @class = "help-inline" })
                </div>
            </div>

            <div class="form-actions no-color">
                <input type="submit" value="Create" class="btn" />
            </div>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>