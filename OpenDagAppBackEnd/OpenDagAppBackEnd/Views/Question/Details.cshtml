@model OpenDagAppBackEnd.Models.Question

@{
    ViewBag.Title = "Details";
}

<div class="bodyForms">
    <h2>Details</h2>

    <fieldset>
        <legend><b>Vragen</b></legend>
        <dl>
            <dt>
                <b>Vraag</b>
                @*<b>@Html.DisplayNameFor(model => model.Text)</b>*@
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Text)
            </dd>

            <dt>
                <b>Vragenlijst Naam</b>
                @*<b>@Html.DisplayNameFor(model => model.Survey.Name)</b>*@
            </dt>

            <dd>
                @*@Html.DisplayFor(model => model.Survey.Name)*@
                @ViewBag.SurveyName
            </dd>

        </dl>
    </fieldset>
    <p>
        @Html.ActionLink("Aanpassen", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Terug naar de lijst", "Index")
    </p>

    @if (ViewBag.Answers != null)
    {
        <table border="1">
            <tr>
                <th>
                    Antwoord
                </th>
                <th>
                    Rating
                </th>
                <th>
                    Studie
                </th>
            </tr>
            @foreach (var a in ViewBag.Answers)
            {
                <tr>
                    <td>@a.Text</td>
                    <td>@a.Rating</td>
                    <td>@a.studyId</td>
                </tr>
            }
        </table>


        <h3>Overzicht studies per id</h3>
        <table>
            @foreach (var study in ViewBag.Study)
            {
                <tr>
                    <td>@study.Id</td>
                    <td>@study.Name</td>
                </tr>
            }
        </table>
    }

</div>