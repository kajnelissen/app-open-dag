@model IEnumerable<OpenDagAppBackEnd.Models.Question>

@{
    ViewBag.Title = "Index";
}

<div class="bodyForms">
    <h2>Overzicht vragen</h2>

    <p>
        @*@Html.ActionLink("Creëer nieuw", "Create")*@
        @Html.ActionLink("Creëer nieuw", "CreateQuestions")
    </p>
    <table class="table" border="1">
        <tr>
            <th>
                Vraag
                @*@Html.DisplayNameFor(model => model.Text)*@
            </th>
            <th>
                Hoortbij Survey
                @*@Html.DisplayNameFor(model => model.Survey.Name)*@
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Survey.Name)
                </td>
                <td>
                    @Html.ActionLink("Aanpassen", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>