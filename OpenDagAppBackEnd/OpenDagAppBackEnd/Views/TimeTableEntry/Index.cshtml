@model IEnumerable<OpenDagAppBackEnd.Models.TimeTableEntry>

@{
    ViewBag.Title = "Index";
}

<div class="bodyForms">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Creëer nieuw", "CreateTimeTableEntry")
    </p>
    <table class="table" border="1">
        <tr>
            <th>
                <b>Activiteit</b>
                @*@Html.DisplayNameFor(model => model.Title)*@
            </th>
            <th>
                <b>Beschrijving activeit</b>
                @*@Html.DisplayNameFor(model => model.Description)*@
            </th>
            <th>
                <b>Locatie</b>
                @*@Html.DisplayNameFor(model => model.Location)*@
            </th>
            <th>
                <b>Begintijd</b>
                @*@Html.DisplayNameFor(model => model.StartTime)*@
            </th>
            <th>
                <b>Eindtijd</b>
                @*@Html.DisplayNameFor(model => model.EndTime)*@
            </th>
            <th>
                <b>Dagprogramma</b>
                @*@Html.DisplayNameFor(model => model.TimeTable.Id)*@
            </th>
            <th>
                <b>Hele dag</b>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.StartTime)*@
                    @Html.DisplayFor(modelItem => item.StartTime.TimeOfDay)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.EndTime)*@
                    @Html.DisplayFor(modelItem => item.EndTime.TimeOfDay)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.TimeTable.Id*@
                    @Html.DisplayFor(modelItem => item.TimeTable.Date.Day)-@Html.DisplayFor(modelItem => item.TimeTable.Date.Month)-@Html.DisplayFor(modelItem => item.TimeTable.Date.Year)
                </td>
                <td>
                    <center>@Html.DisplayFor(modelItem => item.WholeDay)</center>
                </td>
                <td>
                    @Html.ActionLink("Aanpassen", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>